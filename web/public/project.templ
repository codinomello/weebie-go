                                    let reais = parts[0].replace(/^0+(?=\d)/, ''); // remove zeros √† esquerda
                                    reais = reais.replace(/\B(?=(\d{3})+(?!\d))/g, '.');

                                    // Centavos (depois da v√≠rgula)
                                    let cents = parts[1] || '';
                                    if (cents.length > 2) {
                                        cents = cents.slice(0, 2);
                                    }

                                    this.value = cents ? `${reais},${cents}` : reais;
                                });

